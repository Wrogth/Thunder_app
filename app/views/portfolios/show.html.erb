<script>
  $(document).ready(function() {
    var description = "This is a description";

    var populateVideo = function(video) {
      $('#contentThatFades').append("<div class='video'><iframe src='http://player.vimeo.com/video/" + video + "?title=0&amp;byline=0&amp;portrait=0' width='400' height='225' frameborder='0'></iframe>"+"</div>");

            $(".video").fitVids();
            setTimeout(function(){
            $("#panelThatSlides").slideDown(400);
      }, 600);
            
            

    }
    $('.videoLink').click(function () {
      //var videoVal = ($("#"+ eventID).data('video'));
      var sourceE = $(this).data('video');
      if ($("#panelThatSlides").is(":visible")) {
          
            
              $("#panelThatSlides").slideUp(400);
              setTimeout(function(){
                $('#contentThatFades').empty();
                populateVideo(sourceE);
              }, 400);
      }
      else {
        populateVideo(sourceE);
      }
    });
  });
    
  </script>

